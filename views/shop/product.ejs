<%- include('../includes/header.ejs')  %>

<section class="section" id="product_section">
    <div class="product_section_container">
        <div class="product_section_image">
            <div class="product_image">
                <img src="/img/<%=product.imageFront%>.jpg">

            </div>
            <div class="product_detail">
                <p  style="color:#f7c548"><%= product.name %>
                </p>
                <p>
                   <%= product.description %>
                </p>

            </div>
            <div style="text-align:center">
                <form method="POST" action="/cart/addProduct">
                    <input type = "hidden" name="productId" value="<%= product.id %>">
                   <button>Add to Cart</button>
               </form> 
               
            </div>
            

        </div>
        <div class="product_section_link">
            <a href="" ><img id="display"src="/img/<%=product.imageDisplay%>.jpg"></a>
            <a href="" ><img id="front" src="/img/<%=product.imageFront%>.jpg"></a>
            <a href="" ><img id="back" src="/img/<%= product.imageBack%>.jpg"></a>

        </div>



    </div>
    <svg id="product_divider" data-name="divider 2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 94">
        <polygon class="cls-1" points="0 94 512 0 1024 94 0 94"/></svg>


</section>

<%- include('../includes/footer.ejs') %>